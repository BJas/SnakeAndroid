<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apple.snake.OptionActivity"
    android:background="#008002">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Change speed:"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textSize="18dp"
        android:paddingLeft="25dp"
        android:paddingRight="8dp"
        android:textColor="#fff"/>
        <TextView
            android:id="@+id/speedText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="1"
            android:textColor="#fff"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="30dp"
        android:progressTint="#fff"
        android:progressBackgroundTint="#fff"
        android:thumbTint="#fff"
        android:min="1"
        android:max="11"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="Change background image:"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingLeft="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp">
        <ImageButton
            android:id="@+id/background1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/white"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/background2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/sea"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/background3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/sand1"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/background4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/rock1"
            android:onClick="onClick"/>
    </LinearLayout>

</LinearLayout>
