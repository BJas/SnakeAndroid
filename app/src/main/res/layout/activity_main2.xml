<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snake"
    tools:context="com.example.apple.snake.Main2Activity">

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#008002"
        android:text="About"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonGlobalResult" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Start"
        android:textColor="#fff"
        android:backgroundTint="#008002"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:backgroundTint="#008002"
        android:text="results"

        app:layout_constraintTop_toBottomOf="@+id/startButton"
        android:id="@+id/buttonResult" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:backgroundTint="#008002"
        android:text="global result"

        app:layout_constraintTop_toBottomOf="@+id/buttonResult"
        android:id="@+id/buttonGlobalResult" />

    <Button
        android:id="@+id/buttonOption"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#008002"
        android:text="Options"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutButton" />

</android.support.constraint.ConstraintLayout>
